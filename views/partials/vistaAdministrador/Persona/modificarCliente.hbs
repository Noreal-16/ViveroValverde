                                <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                                <input type="password" class="form-control" placeholder="Contraseña..." name="clave1M" id="clave1M">
                                <div class="input-group-append">
                                    <button class="btn btn-danger" data-tooltip="tooltip" data-placement="top" title="Ver contraseña" id="verContrasenia2" type="button"><i class=""></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="/Administra/clientes" class="btn btn-danger">Cancelar</a>
                        <button type="submit" class="btn btn-success" id="btnActualizar">Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
