<!-- Modal  agregar articulo-->
<div class="modal fade" id="agregarArticulo1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="background: #EFF7F1">
            <div class="modal-header bg-dark">
                <h5 class="modal-title font-weight-bold" id="exampleModalLabel1">Registro Articulo <i class="fab fa-canadian-maple-leaf"></i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formArticulo" method="POST" action="/Administra/Articulo/guardar">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-5 col-sm-8 col-xs-12">
                            <div class="form-group col-md-6">
                                <label for="nombre">Nombre</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    <input type="text" class="form-control" id="nombre" placeholder="Nombre de la planta" name="nombre" onkeypress="return validaletra(event)" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="descripcion">Descripcion</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    <input type="text" class="form-control" id="descripcion" placeholder="Descripcion de la planta" name="descripcion" onkeypress="return validaletra(event)" maxlength="60">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="tamanio">Tamaño</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-text-height"></i></span>
                                        <input type="text" class="form-control" id="tamanio" placeholder="Tamaño" name="tamanio" onkeypress="return validaNumero(event)" maxlength="4">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="stock">Stock</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                                        <input type="number" min="1" max="100" class="form-control" id="stock" name="stock" value="1">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="precio">Pecio</label>
                                <div class="input-group">
                                    <span class="input-group-text"> <i class="fas fa-dollar-sign"></i></span>
                                    <input type="text" class="form-control" id="precio" name="precio" placeholder="Precio" onkeypress="return validaNumero(event)">
                                </div>
                            </div><br>
                            <span class="badge badge-pill badge-primary">Categorias</span>
                            <div class="input-group col-md-8">
                                <span class="input-group-text"><i class="far fa-list-alt"></i></span>
                                <select class="form-control" name="categoria" id="categoria">
                                    {{#each lista as |listados i|}}
                                    <option value="{{listados.external_id}}"> {{listados.nombre}} </option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 col-xs-6 thumb" id="srcimagen">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-4 col-sm-6 col-xs-12">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="card border-primary mb-3 " style="width: 18rem;">
                                        <div class="card-header bg-success mb-3">
                                            <h3>Cargar Imagen</h3>
                                        </div>
                                        <div class="card-body">
                                            <img src="/images/fondoPlanta.png" id="imagenArticulo" class="card-img-top" alt="..."></div>
                                        <div class="card-footer">
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" multiple="true" id="customFileLang" lang="es">
                                                    {{!-- para cmabiar el nombre de archivos se utiliza  data-browse="Elegir">Imagen --}}
                                                    <label class="custom-file-label" for="customFileLang" data-browse="Elegir">Imagen</label>
                                                </div>
                                                <div class="input-group-append">
                                                    <button class="btn btn-info" id="btnagregar" data-tooltip="tooltip" data-placement="left" title="Agregar Imagen" type="button"><i class="fa fa-camera-retro"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="/Administra/Articulo" class="btn btn-danger" data-dismiss="modal">Cancelar</a>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Finaliza modal registro articulo-->