<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="listaProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content " style="background: #EFF7F1">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title font-weight-bold" id="exampleModalScrollableTitle">Lista de Articulos <i class="fas fa-list"></i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div id="error"></div>
                    <!-- /.card-body -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="agregarArticulo" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Nro</th>
                                        <th>Foto</th>
                                        <th>Nombre</th>
                                        <th>Categoria</th>
                                        <th>Stock</th>
                                        <th>Precio</th>
                                        <th>Agregar</th>
                                    </tr>
                                </thead>
                                <tbody id="articulos">
                                    {{#each listaA as |listadoAr i|}}
                                    <tr>
                                        <th scope="row">
                                            {{i}}
                                        </th>
                                        <td>Foto</td>
                                        <td>
                                            {{listadoAr.nonbre}}
                                        </td>
                                        <td>
                                            {{listadoAr.categoria.nombre}}
                                        </td>
                                        <td>
                                            {{listadoAr.stok}}
                                        </td>
                                        <td>
                                            {{listadoAr.precio}}
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="#" data-tooltip="tooltip" data-placement="top" title="Editar" class="btn btn-primary btn-sm" onclick="AgregarArticulo('{{listadoAr.external_id}}')"><i class="far fa-plus-square"></i></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>