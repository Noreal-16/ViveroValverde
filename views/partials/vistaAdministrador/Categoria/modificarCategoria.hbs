<!-- Modal agregar categoria -->
<div class="modal fade" id="actualizarCategoria" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content" style="background: #EFF7F1">
            <div class="modal-header bg-info">
                <h5 class="modal-title font-weight-bold" id="exampleModalLabel">Actualizar Categorias <i class="fas fa-tasks"></i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formularioM" method="POST" action="/Administrador/Modificar">
                <div class="modal-body">
                    <input type="hidden" id="external" name="external" value="0" />
                    <div class="form-group col-md-8">
                        <label for="nombre">Nombre</label>
                        <div class="input-group">
                            <span class="input-group-text"> <i class="fas fa-info"></i></span>
                            <input type="text" class="form-control" id="nombre1" placeholder="Nombre Categoria" name="nombre1" onkeypress="return validaletra(event)" />
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="descripcion">Descripcion</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="far fa-file-alt"></i></span>
                            <textarea class="form-control" id="descripcion1" placeholder="Descripcion Categoria" name="descripcion1" onkeypress="return validaletra(event)"></textarea>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="/Administra/Articulo" class="btn btn-danger">Cancelar</a>
                    <button type="submit" class="btn btn-success">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>